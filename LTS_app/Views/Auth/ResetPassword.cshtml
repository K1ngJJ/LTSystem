@{
    ViewData["Title"] = "Reset Password";
}

<link rel="stylesheet" href="~/assets/css/styles.min.css" />

<div class="page-wrapper d-flex align-items-center justify-content-center min-vh-100 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4 col-xxl-3">
                <div class="card shadow-sm" style="border-radius: 10px;">
                    <div class="card-body text-center p-4">
                        <a href="@Url.Action("Index", "Home")" class="d-block py-2">
                            <img src="~/assets/images/logos/logo.png" alt="Logo" class="img-fluid" style="max-width: 70px;">
                        </a>
                        <p class="text-muted small">Secure your account</p>

                        @if (!string.IsNullOrEmpty(ViewBag.Message))
                        {
                            <div class="alert alert-success p-2 small">@ViewBag.Message</div>
                        }

                        @if (!string.IsNullOrEmpty(ViewBag.Error))
                        {
                            <div class="alert alert-danger p-2 small">@ViewBag.Error</div>
                        }

                        <form method="post" action="@Url.Action("ResetPassword", "Auth")">
                            <input type="hidden" name="token" value="@ViewBag.Token" />

                            <div class="mb-3 text-start">
                                <label for="newPassword" class="form-label small">New Password</label>
                                <div class="input-group">
                                    <input type="password" class="form-control form-control-sm" id="newPassword" name="newPassword" placeholder="Enter new password" required>
                                    <button type="button" class="btn btn-outline-secondary btn-sm" onclick="togglePassword()">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 py-1 fs-6 rounded-2">Reset Password</button>
                        </form>

                        <div class="mt-3">
                            <p class="small mb-0">Remembered your password? <a href="@Url.Action("Login", "Auth")" class="text-primary fw-bold">Sign In</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword() {
            var input = document.getElementById("newPassword");
            input.type = input.type === "password" ? "text" : "password";
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/sidebarmenu.js"></script>
    <script src="~/assets/js/app.min.js"></script>
    <script src="~/assets/libs/simplebar/dist/simplebar.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
