@model LTS_app.Models.Committee
<div class="container mt-4">
    <h2>Delete Committee</h2>
    <p>Are you sure you want to delete the committee <strong>@Model.Name</strong>?</p>
    <form method="post" action="@Url.Action("DeleteConfirmed", "Committee")">
        <input type="hidden" name="Id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a class="btn btn-secondary" href="@Url.Action("Index", "Committee")">Cancel</a>
    </form>
</div>