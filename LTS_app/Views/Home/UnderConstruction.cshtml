@{
    ViewData["Title"] = "Under Construction";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
<link rel="stylesheet" href="~/assets/css/styles.min.css" />

<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">
    <!-- Main wrapper -->

    <div class="body-wrapper">
        <div class="container-fluid mt-5">
            <div class="container">
                <div class="card shadow-lg border-0 rounded-3">
                    <div class="card-body py-5 text-center">
                        <div class="icon">🚧</div>
                        <h1 class="text-warning">Page Under Construction</h1>
                        <p class="text-muted">We are currently working on this page to bring you something awesome. Please check back later!</p>
                        <a href="javascript:history.back()" class="btn btn-primary btn-sm mt-3">
                            <i class="bi bi-arrow-left"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

