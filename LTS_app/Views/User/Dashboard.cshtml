@{
    ViewData["Title"] = "User Dashboard";
    var username = User.Identity?.IsAuthenticated == true ? User.Identity.Name : "User";
}

<link rel="stylesheet" href="~/assets/css/styles.min.css" />


<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">
    <!-- Main wrapper -->
    <div class="body-wrapper">
        <div class="container-fluid mt-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title fw-semibold mb-4">User Dashboard</h5>
                    <p class="mb-0">Welcome to the User Panel</p>
                </div>
            </div>

            <div class="row">
                <div class="row mt-3">
                    <div class="col-md-4">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">Bills</h5>
                                <p class="card-text">Manage legislative bills.</p>
                                <a asp-controller="Bill" asp-action="Index" class="btn btn-primary">Go</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card shadow-sm bg-danger text-white">
                            <div class="card-body">
                                <h5 class="card-title">Logout</h5>
                                <p class="card-text">Sign out from the admin panel.</p>
                                <a asp-controller="Auth" asp-action="Logout" class="btn btn-outline-light">Logout</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="~/assets/libs/jquery/dist/jquery.min.js"></script>
        <script src="~/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/assets/js/sidebarmenu.js"></script>
        <script src="~/assets/js/app.min.js"></script>
        <script src="~/assets/libs/simplebar/dist/simplebar.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    }
