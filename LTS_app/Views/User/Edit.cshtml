@model LTS_app.Models.User
@{
    ViewData["Title"] = "Edit User";
}

<link rel="stylesheet" href="~/css/user_management.css" asp-append-version="true">


<div class="container mt-5">
    <div class="card custom-card">
        <div class="card-header bg-warning text-white">
            <h5 class="mb-0">Edit User</h5>
        </div>
        <div class="card-body">
            <form method="post" asp-action="Edit" asp-controller="User">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input type="text" asp-for="Username" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" asp-for="Email" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Role</label>
                    <select asp-for="Role" class="form-select">
                        <option value="User">User</option>
                        <option value="Legislator">Legislator</option>
                        <option value="Admin">Admin</option>
                    </select>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-warning me-2">Update</button>
                    <a asp-action="Index" class="btn btn-secondary">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
