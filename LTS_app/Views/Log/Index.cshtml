@model IEnumerable<LTS_app.Models.UserLog>

@{
    ViewData["Title"] = "Activity Logs";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
<link rel="stylesheet" href="~/assets/css/styles.min.css" />

<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">
    <!-- Main wrapper -->
    <div class="body-wrapper">
        <div class="container-fluid mt-3">
            <div class="card">
                <div class="table-responsive card-body">
                    <h5 class="card-title fw-semibold mb-4">Activity Logs</h5>
                    <p class="mb-0">Monitor user activities in the system.</p>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="logsTable" class="table table-sm table-striped table-bordered">
                            <thead class="small">
                                <tr>
                                    <th>Username</th>
                                    <th>Name</th>
                                    <th>Action</th>
                                    <th>Timestamp</th>
                                </tr>
                            </thead>
                            <tbody class="small">
                                @foreach (var log in Model)
                                {
                                    <tr>
                                        <td>@log.Username</td>
                                        <td>@log.FullName</td>
                                        <td>@log.Action</td>
                                        <td>@log.Timestamp.ToString("MMMM d, yyyy - h:mm tt")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/session_management.js"></script>
    <script src="~/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/sidebarmenu.js"></script>
    <script src="~/assets/js/app.min.js"></script>
    <script src="~/assets/libs/simplebar/dist/simplebar.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#logsTable').DataTable({
                "paging": true,
                "lengthMenu": [ [10, 25, 50, -1], [10, 25, 50, "All"] ],
                "searching": true,
                "ordering": true,
                "info": true,
                "language": {
                    "search": "🔍",
                    "searchPlaceholder": "Search...",
                    "lengthMenu": "Show _MENU_ logs",
                    "info": "Showing _START_ to _END_ of _TOTAL_ Logs",
                    "paginate": {
                        "previous": "«",
                        "next": "»"
                    }
                }
            });
        });
    </script>
}
